@model WebApplication1.Models.Employee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateEmployee</title>
</head>
<body>
    <div> 
        <h2>修改员工信息</h2>
        <div>
            <form action="/employee/UpdateEmployee" method="post">
                ID:<input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
                姓名：<input type="text" name="Name" value="@Model.Name">
                工资：<input type="text" name="Salary" value="@Model.Salary">
                <input type="submit" value="保存修改"><input type="reset" value="重置">
            </form>
        </div>
    </div>
</body>
</html>
